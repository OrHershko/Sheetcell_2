<ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.sortandfilter.FilterGetColumnPopUpController">
   <content>
      <VBox fx:id="filterGetColumnsPopUp" maxHeight="-Infinity" maxWidth="-Infinity">
         <children>
            <HBox minHeight="-Infinity" minWidth="300.0" prefWidth="300.0" spacing="10.0">
               <children>
                  <Label text="Filter by:" />
                  <ChoiceBox fx:id="columnsChoiceBox" minHeight="-Infinity" minWidth="-Infinity" />
                  <ChoiceBox fx:id="valuesChoiceBox" minHeight="-Infinity" minWidth="90.0" prefWidth="90.0">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></ChoiceBox>
               </children>
